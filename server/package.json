  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.22",
    "typescript": "^5.1.3"
  }
}
