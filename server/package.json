{
  "name": "squealer-server",
  "version": "1.0.0",
  "description": "The server for the project of tecWeb A.A. 2023",
  "main": "index.js",
  "scripts": {
    "free": "rm -r ./dist/*",
    "prebuild": "npm run free",
    "build": "npx tsc",
    "prestart": "npm run build",
